<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_notification_view"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/description_notification"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/description_notification"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/time_notification"
        app:layout_constraintStart_toEndOf="@+id/title_notification_view" />

    <TextView
        android:id="@+id/time_notification"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/description_notification" />

</androidx.constraintlayout.widget.ConstraintLayout>